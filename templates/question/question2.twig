{% extends 'base_general.html.twig' %}

{% block body %}

    <section class="page-section" id="contact">
        <div class="container mt-5">
            <!-- Contact Section Heading-->
            <div class="text-center">
                <h2 class="page-section-heading text-primary d-inline-block mb-0">Pregunta 2</h2>
                <br>
                <h4 class="text-secondary d-inline-block mb-0">Realizar el controlador para un endpoint de una API REST que permite modificar una entidad de tipo persona</h4>
            </div>
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <!-- Contact Section Content-->
            <div class="row justify-content-center">

                {{ form_start(form , {'method': 'POST', 'action':url('editpersona',{id:id}) }) }}
                {{ form_errors(form) }}

                <div class="form-group text-center">
                    {{ form_label(form.nombre) }}
                    {{ form_widget(form.nombre,{'attr':{'size':80}}) }}
                </div>
                <div class="form-group text-center">
                    {{ form_label(form.fechaNacimiento) }}
                    {{ form_widget(form.fechaNacimiento,{'attr':{'size':80}}) }}
                </div>
                <div class="row justify-content-center">
                    <button class="btn btn-primary text-center" type="submit">Modificar Datos</button>
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </section>
{% endblock %}

{% block javascript %}
<script type="text/javascript">
    $('#persona_fechaNacimiento').datepicker({ firstDay: 3 });
</script>
{% endblock %}